<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_json"
        android:textAllCaps="false"
        android:text="loadjson"
        android:onClick="loadjson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_data"
        android:textAllCaps="false"
        android:text="loadData"
        android:onClick="loadData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_image"
        android:textAllCaps="false"
        android:text="loadImage"
        android:onClick="loadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_post_result"
        android:textAllCaps="false"
        android:text="postResult"
        android:onClick="postRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_post_url_result"
        android:textAllCaps="false"
        android:text="postResultUrl"
        android:onClick="postWithParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_get_url_result"
        android:textAllCaps="false"
        android:text="getResultUrl"
        android:onClick="getWithParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_downFile_result"
        android:textAllCaps="false"
        android:text="downFile"
        android:onClick="downFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_async_get_result"
        android:textAllCaps="false"
        android:text="asyncGet"
        android:onClick="asyncGet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_result"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_result_post"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>